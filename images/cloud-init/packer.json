{
  "variables": {
    "image_mount_path": "/mnt/packer-chroot/cloud-init"
  },
  "builders": [
    {
      "type": "arm",
      "file_urls": [
        "file:///images/base.tar.gz"
      ],
      "file_checksum_type": "none",
      "file_unarchive_cmd": [
        "tar",
        "-xpf",
        "$ARCHIVE_PATH",
        "-C",
        "$MOUNTPOINT"
      ],
      "file_target_extension": "tar.gz",
      "image_build_method": "new",
      "image_path": "cloud-init.tar.gz",
      "image_size": "2G",
      "image_type": "dos",
      "image_mount_path": "{{ user `image_mount_path` }}",
      "image_partitions": [
        {
          "name": "root",
          "type": "83",
          "start_sector": "532480",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": [
        "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
      ],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "ansible_env_vars": [
        "ANSIBLE_RETRY_FILES_ENABLED=0 "
      ],
      "extra_arguments": [
        "-v",
        "--connection=chroot"
      ],
      "inventory_file": "./cloud-init/ansible/hosts",
      "playbook_file": "./cloud-init/ansible/site.yml"
    }
  ]
}
