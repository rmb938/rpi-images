{
  "variables": {},
  "builders": [
    {
      "type": "arm",
      "file_urls": [
        "file:///images/cloud-init.tar.gz"
      ],
      "file_checksum_type": "none",
      "file_unarchive_cmd": [
        "tar",
        "-xpf",
        "$ARCHIVE_PATH",
        "-C",
        "$MOUNTPOINT"
      ],
      "file_target_extension": "tar.gz",
      "image_build_method": "new",
      "image_path": "kubernetes.img",
      "image_size": "3G",
      "image_type": "dos",
      "image_partitions": [
        {
          "name": "boot",
          "type": "c",
          "start_sector": "8192",
          "filesystem": "vfat",
          "size": "256M",
          "mountpoint": "/boot"
        },
        {
          "name": "root",
          "type": "83",
          "start_sector": "532480",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": [
        "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
      ],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get install -y iptables arptables ebtables",
        "update-alternatives --set iptables /usr/sbin/iptables-legacy",
        "update-alternatives --set ip6tables /usr/sbin/ip6tables-legacy",
        "update-alternatives --set arptables /usr/sbin/arptables-legacy",
        "update-alternatives --set ebtables /usr/sbin/ebtables-legacy"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "apt-get install -y apt-transport-https ca-certificates curl gnupg2 software-properties-common"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "curl -fsSL https://download.docker.com/linux/raspbian/gpg | apt-key add -",
        "echo 'deb [arch=armhf] https://download.docker.com/linux/raspbian buster stable' > /etc/apt/sources.list.d/docker.list",
        "apt-get update",
        "apt-get install -y --no-install-recommends docker-ce docker-ce-cli containerd.io"
      ]
    }
  ]
}
